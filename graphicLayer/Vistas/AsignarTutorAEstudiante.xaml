<Page x:Class="graphicLayer.Vistas.AsignarTutorAEstudiante"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:graphicLayer.Vistas"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AsignarTutorAEstudiante">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <DataGrid
            Name="DgTutores"
            Width="774"
            Height="201"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            >
            <DataGrid.Columns>
                <DataGridTemplateColumn
                    Header="Asignar" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Content="Asignar"
                                Click="AsignarTutor"
                                />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombres}"/>
                <DataGridTextColumn Header="Cantidad de Tutorados" Binding="{Binding Apellidos}"/>

            </DataGrid.Columns>
        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Margin="0,-69,0,0" TextWrapping="Wrap" Text="Tutores" VerticalAlignment="Top" Width="321" FontSize="48"/>
    </Grid>
</Page>

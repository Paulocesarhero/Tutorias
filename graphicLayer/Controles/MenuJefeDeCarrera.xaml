<UserControl
    x:Class="graphicLayer.Controles.MenuJefeDeCarrera"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:graphicLayer.Controles"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Menu Margin="5" materialDesign:MenuAssist.TopLevelMenuItemHeight="25">
            <MenuItem
                Name="BtnExit"
                Click="BtnExit_Click"
                Header="Salir" />
            <MenuItem
                Name="BtnProblematicas"
                Click="BtnProblematicas_Click"
                Header="Problematicas" />
            <MenuItem
                Name="BtnReportes"
                Click="BtnReportes_Click"
                Header="Reportes de tutorias" />

        </Menu>
    </Grid>
</UserControl>

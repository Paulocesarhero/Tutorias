<UserControl
    x:Class="graphicLayer.Controles.MenuCoordinadora"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Menu Margin="5" materialDesign:MenuAssist.TopLevelMenuItemHeight="25">
            <MenuItem
                Name="BtnExit"
                Click="BtnExit_Click"
                Header="Salir" />
            <MenuItem Name="BtnAdministrarEstudiante" Header="Estudiantes" />
            <MenuItem
                Name="BtnExperiencias"
                Click="BtnExperiencias_Click"
                Header="Experiencias" />
            <MenuItem Name="BtnAdministrarFechasdesesión" Header="Fechas de sesión de tutoria academica" />
            <MenuItem
                Name="BtnAdministrarTutoresAcademicos"
                Click="BtnAdministrarTutoresAcademicos_Click"
                Header="Tutores academicos" />
        </Menu>
    </Grid>
</UserControl>